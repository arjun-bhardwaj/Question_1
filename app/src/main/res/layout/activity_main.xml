<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:text="Microsoft Team"
            android:textAlignment="center"
            android:textColor="#6164A7"
            android:textFontWeight="600"
            android:textSize="36dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/microsoftimage" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Get started with your Work, School or Personal Microsoft Account"
            android:textAlignment="center"
            android:textColor="#B1B1B1"
            android:textFontWeight="600"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editemail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/logineditbackground"
            android:hint="Enter Email, Phone, Skype"
            android:padding="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonbackgroung"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:rippleColor="#6164A7" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Get help with signing in"
            android:textAlignment="center"
            android:textColor="#B1B1B1"
            android:textFontWeight="600"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:padding="20dp"
            android:text="Join a Meeting"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:drawableStart="@drawable/microsoft_1"
            android:padding="20dp"
            android:text="Sign Up for Free"
            android:textAllCaps="false" />


      </LinearLayout>
    </ScrollView>
</RelativeLayout>
